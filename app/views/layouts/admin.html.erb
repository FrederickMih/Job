<!DOCTYPE html>
<html>
  <head>
    <title>Admin: IlanceitPass</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow">
    <a class="navbar-brand" href="/dashboard">IlaceITPass</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto" style="marging-left: -200px">
        <li class="nav-item active">
          <a class="nav-link" href="/campaigns"><i class="fa fa-clipboard-list"></i> Campaigns <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/profiles">Marketplace</a>
        </li>
        <%
=begin%>
 <li class="nav-item">
          <a class="nav-link" href="#">Workforce</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contacts</a>
        </li> 
<%
=end%>
      </ul>
      <div class="dropdown" >
        <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
          <%= current_user.email %>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <%= link_to('My Account', edit_user_registration_path, class: "dropdown-item") %>
          <div class="dropdown-divider"></div>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "dropdown-item") %>
          <% else %>
            <%= link_to('Login', new_user_session_path, class: "dropdown-item") %>
          <% end %>
        </div>
      </div> 

    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>


