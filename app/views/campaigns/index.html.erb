<div class="row">
  <h3 class="">Campaigns</h3>
  <span class="col-lg-7 offset-2">
    <%= link_to ' + New Campaign', new_campaign_path, class: "btn btn-primary pull-right" %>
  </span>
</div>
<hr />

<% @campaigns.each do |campaign| %>
  <div class="card">
    <div class="card-body d-flex justify-content-between align-items-center">
       <%= link_to campaign do%>
        <h5 class="mb-1"><%= campaign.name %></h5>
      <% end %>
      <h6 class="mb-2">
        Start Date: <%= campaign.start_date&.to_date %>
        <hr />
        Status: <span class= "badge badge-primary"><%= campaign.status %></span>
      </h6>
      <span class="">
        <%= link_to 'Edit', edit_campaign_path(campaign) %> |
        <%= link_to 'InActive', campaign, method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </div>
  </div>
  <br />
<% end %>
